  "main": "index.js",
  "scripts": {
    "build": "cli-tasks build",
    "canary": "cli-tasks canary",
    "clean": "cli-tasks clean",
    "lerna": "lerna",
    "pre-release": "cli-tasks prerelease",
    "release": "cli-tasks release",
