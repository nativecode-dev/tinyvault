{
  "tasks": {
    "bootstrap": [
      "lerna bootstrap"
    ],
    "build": [
      "[bootstrap]",
      "[lint]",
      "lerna run build"
    ],
    "ci:compile": [
      "[build]"
    ],
    "ci:install": [
      "npm install",
      "[bootstrap]",
      "[compile]"
    ],
    "ci:canary": [
      "[ci:install]",
      "[ci:test]",
      "lerna publish --conventional-commits --conventional-graduate --canary --yes"
    ],
    "ci:prerelease": [
      "[ci:install]",
      "[ci:test]",
      "lerna publish --conventional-commits --conventional-prerelease --yes"
    ],
    "ci:release": [
      "[ci:install]",
      "[ci:test]",
      "lerna publish --conventional-commits --yes"
    ],
    "ci:test": [
      "nyc mocha --opts mocha.opts --reporter spec"
    ],
    "clean": [
      "rimraf packages/*/bin",
      "rimraf packages/*/lib",
      "rimraf **/*.tsbuildinfo"
    ],
    "lint": [
      "jsonsort *.json",
      "jsonsort executables/*/*.json",
      "jsonsort packages/*/*.json"
    ],
    "test": [
      "[build]",
      "nyc mocha --opts mocha.opts"
    ],
    "watch": [
      "lerna run --parallel watch"
    ]
  }
}
