{
  "tasks": {
    "bootstrap": [
      "lerna bootstrap"
    ],
    "build": [
      "[bootstrap]",
      "[lint]",
      "[compile]"
    ],
    "canary": [
      "[test:ci]",
      "lerna publish --conventional-commits --conventional-graduate --canary --yes"
    ],
    "clean": [
      "rimraf packages/*/bin",
      "rimraf packages/*/lib",
      "rimraf **/*.tsbuildinfo"
    ],
    "compile": [
      "lerna run build"
    ],
    "lint": [
      "jsonsort *.json",
      "jsonsort packages/*/*.json",
      "tslint --project packages/tinyvault/tsconfig.json --config tslint.json",
      "tslint --project packages/tinyvault-lib/tsconfig.json --config tslint.json"
    ],
    "prerelease": [
      "[test:ci]",
      "lerna publish --conventional-commits --conventional-prerelease --yes"
    ],
    "release": [
      "[test:ci]",
      "lerna publish --conventional-commits --yes"
    ],
    "test": [
      "[build]",
      "nyc mocha --opts mocha.opts"
    ],
    "test:ci": [
      "npm install",
      "[bootstrap]",
      "[compile]",
      "nyc mocha --opts mocha.opts --reporter spec"
    ],
    "watch": [
      "lerna run --parallel watch"
    ]
  }
}
